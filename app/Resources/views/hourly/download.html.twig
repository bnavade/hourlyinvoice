{% extends '::base.html.twig' %}

{% block content %}
<div class="container">
<div class="row">
<div class="col-lg-6">
<h1>Hourly invoice downloads</h1>
<table>
  <tr>
    <th>Invoice Date</th>
    <th>Download Invoice</th>
  </tr>
  {% for list in lists %}
  <tr>
    <td>{{list.date|date("Y-m-d")}}</td>
    <td><i fa fa-pdf fa-fw></i><a href="/hourly/download?date={{list.date|date("Y-m-d")}}" target="blank">download invoice</a></td>
  </tr>
  {% endfor %}
</table>
</div>
</div>
</div>
{% endblock %}
